<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ToDo List Express</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>To-Do List</h1>
  <!-- created a custom list-name attribute to hold the name of the list -->
  <div>
    <input type="text" id="item">
    <button class="put add" type="button">Add</button>
    <button class="put remove" type="button">Remove Completed</button>
    <button class="put clear" type="button">Clear List</button>
  </div>

  <section id="container">
    <ul id="list">
      <!-- getting the length of the list in the todo list document -->
      <%for (i=0;i < todoList.list.length;i++) { %>
        <!-- iterating through the todo list to add li to the ul -->
        <li><%= todoList.list[i] %></li>
      <% } %>
    </ul>
  </section>

  <script>
    // JSON.stringify turns JSON into a string
    var todoList = <%- JSON.stringify(todoList) %>
  </script>

  <script src="main.js"></script>
</body>
</html>
